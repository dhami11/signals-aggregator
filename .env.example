# Discord configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here

# Push notification configuration
NTFY_TOPIC=your_notification_topic_here

# Monitor settings (optional - defaults shown)
CHECK_INTERVAL=5
LOG_LEVEL=info
LOG_FORMAT=plain
REQUEST_TIMEOUT=10

# Notification settings (set to false to disable)
ENABLE_DESKTOP_NOTIFICATIONS=true
ENABLE_MOBILE_NOTIFICATIONS=true

# Note: Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!
# Use .env.local for local testing
